<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CameraFeed.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start" Orientation="Horizontal">
                <Entry x:Name="NameInput" Placeholder="Enter Your Name" HorizontalOptions="FillAndExpand" />
                <Button Clicked="GoToCameraPage" Text="Login" HorizontalOptions="End" />
            </StackLayout>
            <StackLayout VerticalOptions="Start">
                <Button Clicked="GoToGalleryPage" Text="See Gallery" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>